{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "outDir": "../build/electron",
    "rootDir": ".",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "electron"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "include": [
    "*.ts"
  ]
} 